---
import "@styles/global.css";
import { ClientRouter, fade } from "astro:transitions";
import Analytics from '@vercel/analytics/astro'

export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const {
  title = "Buenabarba | Barbería y Academia",
  description = "Barbería y academia Buenabarba. Cortes clásicos y modernos, barbas y formación profesional en barbería.",
  canonical = "https://tudominio.com/",
} = Astro.props as Props;
---

<!doctype html>
<html lang="es" transition:name="root" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/logo-light.svg" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- Opcional: meta básicas SEO/social -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />

    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
  </head>
  <body class="bg-black text-white antialiased">
    <main transition:animate={fade({ duration: "0.6s" })}>
      <slot />
    </main>
    <Analytics />
  </body>
</html>
