---
import { FB_URL, IG_URL, PHONE, PHONE_HREF, EMAIL, ADDRESS } from "@utils/const";
---

<footer id="contacto" class="mt-16">
  {/* Bloque CONTACTANOS */}
  <section class="bg-[#122133] text-white py-16 sm:py-20">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2
        class="font-oswald font-bold text-2xl sm:text-3xl tracking-[0.25em] uppercase mb-8"
      >
        CONTÁCTANOS
      </h2>

      <div class="space-y-3 text-sm sm:text-lg leading-relaxed">
        <p>
          Fono:
          {" "}
          <a
            href={`tel:${PHONE_HREF}`}
            class="underline-offset-4 hover:underline"
          >
            {PHONE}
          </a>
        </p>
        <p>
          Correo:
          {" "}
          <a
            href={`mailto:${EMAIL}`}
            class="underline-offset-4 hover:underline"
          >
            {EMAIL}
          </a>
        </p>
        <p>Ubicación: {ADDRESS}</p>
      </div>
    </div>
  </section>

  {/* Franja inferior con redes */}
  <section class="bg-[#f7f5f2] py-6">
    <div class="max-w-6xl mx-auto px-4">
      <div class="flex items-center justify-center gap-8 text-neutral-900">
        <a
          href={FB_URL}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Facebook Buenabarba"
          class="hover:opacity-70 transition-opacity"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M13.5 22v-7h2.25a.75.75 0 0 0 .74-.63l.38-2.5a.75.75 0 0 0-.74-.87H13.5V9.25c0-.72.58-1.25 1.5-1.25h1a.75.75 0 0 0 .75-.75V4.76a.75.75 0 0 0-.66-.74A16.9 16.9 0 0 0 14 4c-2.26 0-3.75 1.6-3.75 4.08V11H8.25a.75.75 0 0 0-.75.75v2.5c0 .41.34.75.75.75H10.25V22h3.25Z"
            ></path>
          </svg>
        </a>

        <a
          href={IG_URL}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram Buenabarba"
          class="hover:opacity-70 transition-opacity"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
          >
            <rect x="3" y="3" width="18" height="18" rx="5"></rect>
            <circle cx="12" cy="12" r="4"></circle>
            <circle cx="17" cy="7" r="1" fill="currentColor"></circle>
          </svg>
        </a>
      </div>
    </div>
  </section>
</footer>
